<?xml version="1.0" encoding="UTF-8"?>
<Response>
 <% if @names.blank? %>
  <Say>Welcome. Joining a conference already in progress.</Say>
 <% else %>
  <Say>Welcome. On the call today we have <%= @names %></Say>
 <% end %>
 <% if @timelimit > 60 %>
 <Dial timeLimit="<%= @timelimit - 60 %>">
	<Conference><%= @conference %></Conference>
 </Dial>
 <Say>1 Minute Remaining.</Say>
 <% end %>
 <Dial timeLimit="<%= @timelimit > 60 ? 60 : @timelimit %>">
	<Conference><%= @conference %></Conference>
 </Dial>
  <Say>Time is up.<% unless @next_call_time.blank? %> Your next call is <%= @next_call_time %>.<% end %> Have an awesome day!</Say>
</Response>