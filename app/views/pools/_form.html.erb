<%= form_for(@pool) do |f| %>
<%= pretty_object_error_messages(@pool) %>

  <div class="field">
    <%= f.label :name, "Name:", :class => "round" %><br />
    <%= f.text_field :name, :class => "round" %>
  </div>
  <div class="field">
    <%= f.label :timelimit, "Time Limit:", :class => "round" %><br />
    <%= f.text_field :timelimit, :class => "round" %>
  </div>
  <div class="actions">
    <%= f.submit @submit_text %>
  </div>
<% end %>
