<% if @call_groups.any? %>
  <h3>My Call <%= @call_groups.length > 1 ? 'Groups' : 'Group' %>:</h3>
  <p>Note: Only three of you will be on any one call....</p>
  <% @call_groups.each do |cg| %>
    <p><b>
	<% if cg[:pool] != Pool.default_pool.id %>
	<i><%= Pool.find_by_id(cg[:pool]).name %>: </i>
	<% end %>
    <%= cg[:time] %> Call
    </b><br>
    <% cg[:events].each do |event_list| %>
    <% event = Event.find_by_id(event_list[0]) %>
    <% user = event.user %>
      <%= gravatar_for user, :size => 30 %> <%= link_to user.name, "/u/" + user.handle %> - <%= user.title %>
      <i>(<%= event.schedule_day_string %>)</i>
      <% if event.user == current_user %>
       - <%= link_to "Edit Your Availability", edit_event_path(event) %>
      <% end %>
      <br/>
    <% end %>
    </p>
  <% end %>
<% else %>
 <h3>You currently aren't on any calls.</h3>
<% end %>