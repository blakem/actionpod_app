<h3>Welcome <%= current_user.name %></h3>
<% if @events.any? %>
  <h3>Your Scheduled Calls:</h3>
  <ul>
   <% @events.each do |event| %>
   <li><b><%= link_to event.name, edit_event_path(event) %></b> at <%= event.schedule_str %></li>
   <% end %>
   <li><b><%= link_to "Create New Event", new_event_path %>
   <li><b><%= link_to "Show existing call times", :action => :callcal %>
  </ul>
<% else %>
  <h3>You don't have any scheduled calls</h3>
   <ul>
    <li><b><%= link_to "Create New Event", new_event_path %>
	<li><b><%= link_to "Show existing call times", :action => :callcal %>
   </ul>
<% end %>