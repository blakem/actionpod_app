<% if @user.about.blank? %>
  <p>Intro: None
  <% if @user == @current_user %>
    <br/><strong><%= link_to "Update your Intro", :controller => :pages, :action => :intro %></strong>
  <% end %>
  </p>
<% else %>
  <% if @mailer %>
    <p><%= simple_format(h(@user.about.strip)) %></p><p>&nbsp;</p>
  <% else %>
    <span class="quote"><%= simple_format('&#8220;' + h(@user.about.strip) + '&#8221;') %></span><hr>
  <% end %>
<% end %>