<%= form_for(@plan, :url => '/pages/plan') do |f| %>
  <%= pretty_object_error_messages(@plan) %>
  <div class="field">
    <p><%= f.label :body, "Update Plan:", :class => "round" %><br/>
    <%= f.text_area :body, :class => "round" %></p>
  </div>
  <div class="actions">
    <%= f.submit "Update Plan" %>
  </div>
<% end %>

