<p>
<% if current_user.admin? %>
  <%= link_to "Show existing call times", :action => :callcal %><br/>
<% end %>
  <%= link_to('Edit Profile', edit_user_registration_path) %><br/>
  <%= link_to "View your profile", "/u/" + current_user.handle %><br/>
<% unless @view_options[:hide_update_intro] %>
  <% if current_user.about.blank? %>
    <strong>
  <% end %>
  <%= link_to "Update your Intro", :action => :intro %>
  <% if current_user.about.blank? %>
    </strong>
  <% end %>
  <br/>
<% end %>
<% unless @view_options[:hide_create_plan] %>
  <% unless current_user.current_plan %>
  <strong>
  <% end %>
  <%= link_to "Update your Plan", :action => :plan %>
  <% unless current_user.current_plan %>
  </strong>
  <% end %>
  <br/>
<% end %>
  <%= link_to "Add or Delete Phones", phones_path %><br/>
</p>
<% if @nextcalls.any? %>
  <p><strong><%= @your %> next <%= @nextcalls.count == 1 ? 'call' : "#{@nextcalls.count} calls" %>:</strong><br/>
  <% @nextcalls.each do |call| %>
    <%= call %><br/>
  <% end %>
  </p>
<% else %>
  <p><strong><%= @youhave %> no calls scheduled.</strong></p>
<% end %>
