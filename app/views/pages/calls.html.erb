<% if @calls.any? %>
  <p><b>Recent Calls:</b></p>
  <table>
	<th>
	  <td>ID</td>
	  <td>Time</td>
	  <td>To</td>
	  <td>From</td>
	  <td>Direction</td>
	  <td>Duration</td>
	  <td>User</td>
	  <td>Status</td>
    </th>
  <% @calls.each do |call| %>
    <% time = call.created_at.in_time_zone('Pacific Time (US & Canada)') %>
    <% date = time.strftime("%a %b %e") %>
    <% user = '' %>
    <% if call.event_id %>
    <%   event = Event.find_by_id(call.event_id) %>
    <%   user = event.user.name if event %>
    <% end %>
    <td><%= call.id %></td>
    <td><%= date %> <%= time.strftime("%l:%M:%S%p").downcase %></td>
    <td><%= call.To %></td>
    <td><%= call.From %></td>
    <td><%= call.Direction %></td>
    <td><%= call.Duration %></td>
    <td><%= user %></td>
    <td><%= call.status %></td>
  <% end %>
  </table>
 <%= will_paginate @calls %>
<% end %>