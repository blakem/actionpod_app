<meta charset="utf-8">

<style>
#prefs-frame > div.prefs { padding: 10px !important; };
</style>
<script>
$(function() {
	$( "#slider-range-min" ).slider({
		range: "min",
		value: <%= @slider_value %>,
		min: 1,
		max: 3,
		change: function( event, ui ) { document.forms["prefform"].submit(); },
		slide: function( event, ui ) {
			$( "#amount" ).val( ui.value );
		}
	});
	$( "#amount" ).val( $( "#slider-range-min" ).slider( "value" ) );
});
</script>

<div class="prefs">
  <%= form_tag '/pages/prefer', :id => 'prefform' %>
  <p>
	<label for="amount">Matching Preference for:</label>
	<center><img src="/images/icons/users_two_48.png"></center><br/>
	<center>You and <%= @user.first_name %></center>
	<input type="hidden" name="other_user_id" value="<%= @user.id %>">
	<input type="hidden" id="amount" name="prefer" style="border:0; color:#f6931f; font-weight:bold;" />
  </p>
  <div id="slider-range-min"></div>
  </form>
</div>
