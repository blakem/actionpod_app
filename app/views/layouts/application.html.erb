<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <script type="text/javascript" src="/javascripts/jquery.datepick.js"></script>
  <script type="text/javascript" src="javascripts/jquery-1.5.1.min.js"></script>
  <script type="text/javascript" src="javascripts/jquery-ui-1.8.12.custom.min.js"></script>
</head>

<body>
	<div class="container">
    <%= render 'layouts/header' %>
      <section class="round">
      <% flash.each do |name, msg| %>
        <% if msg.class == Array %>
          <div class="flash <%= name %>">
          <%= raw(msg.map{ |s| "#{s}<br/>" }.join("\n")) %>
          </div>
     	<% else %>
          <%= content_tag(:div, msg, :class => "flash #{name}") %>
        <% end %>
      <% end %>
<%= render :partial=>"layouts/#{controller.sublayout}" %>
      </section>
	  <%= render 'layouts/footer' %>
	  <%= debug(params) if Rails.env.development? %>
	  <p>&nbsp;</p>
	</div>
</body>
