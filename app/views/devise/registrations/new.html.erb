<h2>Sign Up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :invite_code, "Invite Code" %> (email <strong>support@15minutecalls.com</strong> for your invite code)<br />
  <%= f.text_field :invite_code %></p>

  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>

  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :primary_phone_string, "Primary Phone" %> <i>(eg: 222-333-4444)</i><br />
  <%= f.text_field :primary_phone_string %></p>

  <p><%= f.label :title %> <i>(Software Developer, Graphic Designer, Author, etc...)</i><br />
  <%= f.text_field :title %></p>

  <p><%= f.label :time_zone, "Time Zone"%><br />
  <%= f.collection_select :time_zone, ActiveSupport::TimeZone.us_zones, :name, :to_s %>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, "Password Confirmation" %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
