<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= pretty_object_error_messages(resource) %>
  <%= f.hidden_field :reset_password_token %>

  <p><%= f.label :password, :class => "round" %><br />
  <%= f.password_field :password, :class => "round" %></p>

  <p><%= f.label :password_confirmation, :class => "round" %><br />
  <%= f.password_field :password_confirmation, :class => "round" %></p>

  <p><%= f.submit "Change my password" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>