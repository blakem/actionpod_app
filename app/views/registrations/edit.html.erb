<h3>Update Your Profile</h3>

<%= form_for(resource.with_phone, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
<%= pretty_object_error_messages(resource) %>
<div class="field">
  <p><%= f.label :name, "Full Name:" %>
  <%= f.text_field :name %></p>
</div>
<div class="field">
  <p><%= f.label :email, "Email:" %>
  <%= f.text_field :email %></p>
</div>
<div class="field">
<%= f.fields_for :phones do |pf| %>
  <p><%= pf.label :string, "Primary Phone:" %>
  <%= pf.text_field :string %></p>
  <%= pf.hidden_field :primary, :value => true %>
<% end %>
</div>
<div class="field">
  <p><%= f.label :about, "Introductory text:" %><br/>
  <%= f.text_area :about %></p>
</div>
<div class="field">
  <p><%= f.label :handle, "Handle:" %>
  <%= f.text_field :handle %></p>
</div>
<div class="field">
  <p><%= f.label :title, "Title:" %> (optional)
  <%= f.text_field :title %><br />
  <i>(Software Developer, Graphic Designer, Author, etc...)</i>
  </p>
</div>
<div class="field">
  <p><%= f.label :location, "Location:" %> (optional) 
  <%= f.text_field :location %><br />
  <i>(San Francisco, Seattle, etc.)</i>
  </p>
</div>
<div class="field">
  <p><%= f.label :time_zone, "Time Zone:" %>
  <%= f.collection_select :time_zone, ActiveSupport::TimeZone.us_zones, :name, :to_s %>
  </p>
</div>
<div class="field">
  <p><%= f.label :hide_email, "Hide my email address from other users:" %>
  <%= f.check_box :hide_email %>
  </p>
</div>
<div class="field">
  <p><%= f.label :use_ifmachine, "Go directly to conference:" %>
  <%= f.check_box :use_ifmachine %><br />
  <i>(Experimental: Use if your phone is having trouble sending keypresses)</i>
  </p>
</div>
<div class="field">
  <p><%= f.label :password, "Password:" %> 
  <%= f.password_field :password %><br />
  <i>(leave blank if you don't want to change it)</i>
  </p>
</div>
<div class="field">
  <p><%= f.label :password_confirmation, "Password Confirmation:" %>
  <%= f.password_field :password_confirmation %>
  </p>
</div>
<div class="field">
  <p><%= f.label :current_password, "Current Password:" %> 
  <%= f.password_field :current_password %><br />
  <i>(we need your current password to confirm your changes)</i>
  </p>
</div>
<div class="actions">
  <p><%= f.submit "Update" %></p>
</div>
<% end %>

<devise class="round"> 
<ul><li><%= link_to "Back", :back %></li></ul>
</devise>

<br/>
