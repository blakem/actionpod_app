<h3>Update Your Profile</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name, "Full Name" %>:
  <%= f.text_field :name %></p>

  <p><%= f.label :email %>:
  <%= f.text_field :email %></p>

  <p><%= f.label :primary_phone_string, "Primary Phone" %>:
  <%= f.text_field :primary_phone_string %></p>

  <p><%= f.label :handle %>:
  <%= f.text_field :handle %></p>

  <p><%= f.label :title %>: (optional)
  <%= f.text_field :title %><br />
  <i>(Software Developer, Graphic Designer, Author, etc...)</i>
  </p>

  <p><%= f.label :location %>: (optional) 
  <%= f.text_field :location %><br />
  <i>(San Francisco, Seattle, etc.)</i></p>

  <p><%= f.label :time_zone, "Time Zone" %>:
  <%= f.collection_select :time_zone, ActiveSupport::TimeZone.us_zones, :name, :to_s %>

  <p><%= f.label :use_ifmachine, "Go directly to conference" %>:
  <%= f.check_box :use_ifmachine %><br />
  <i>(Experimental: Use if your phone is having trouble sending keypresses)</i>

  <p><%= f.label :password %>: 
  <%= f.password_field :password %><br />
  <i>(leave blank if you don't want to change it)</i>
  </p>

  <p><%= f.label :password_confirmation, "Password Confirmation" %>:
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.label :current_password, "Current Password" %>: 
  <%= f.password_field :current_password %><br />
  <i>(we need your current password to confirm your changes)</i>
  </p>

  <p><%= f.submit "Update" %></p>
<% end %>

<devise class="round"> 
<ul><li><%= link_to "Back", :back %></li></ul>
</devise>

<br/>
